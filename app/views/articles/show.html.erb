
<h1 class="text-center mt-4"><%=@article.title %></h1>
<div class="container ">
<div class="row justify-content-md-center">
<div class="col-8 mt-4 ">

<div class="card text-center shadow mb-5 bg-white rounded">
  <div class="card-header font-italic">
    by <%=@article.user.username%>
  </div>
  <div class="card-body">
    <div class="card-text"><%=simple_format(@article.description) %></div>
    <%=link_to "Edit",edit_article_path(@article),class:"btn btn-outline-warning" %>
    <%= link_to 'Delete',article_path(@article),class:"btn btn-outline-danger",
    data: {turbo_confirm:"Are You Sure ?", turbo_method: :delete }%>

  </div>
  <div class="card-footer text-muted">
 <small>Created <%=time_ago_in_words( @article.created_at )%> ago, 
 edited <%= time_ago_in_words(@article.updated_at )%> ago</small>
  </div>

</div>

</div>

<div class="row  mt-2 mb-2 text-center">
      
<%= link_to '[Create a New Article]',new_article_path , class:"text-success "%>

</div>

</div>

   </div>

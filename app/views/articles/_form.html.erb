<div class="container">
  <%= render 'shared/errors',obj:@article%>
   <div class="row justify-content-center">
     <div class="col-10">
      <%= form_with(model: @article ,class:"shadow mb-5 p-3 bg-info rounded", local: true, data: { turbo: false })  do |f| %>

         <div class="form-group row">
             <%= f.label :title , class:"col-2 col-form-label text-light"%><br/>
             <div class="col-10">
               <%= f.text_field :title, class:"form-control shadow rounded",placeholder:"Title of article"%>
            </div>
         </div>

         <div class="form-group row mt-2">
            <%= f.label :description , class:"col-2  col-form-label text-light"%><br/>
            <div class="col-10">
               <%= f.text_area :description,rows:10 , class:"form-control shadow rounded", placeholder:"Description of article" %>
            </div>
         </div>

         <div class="form-group row mt-4 justify-content-center">
         <div class="col-2">
           <%= f.submit class:"btn btn-outline-light btn-lg" %>
           </div>
         </div>
     <% end %>
   </div>
      <div class="row text-center">
    <%= link_to '[Back to List of Articles]',articles_path , class:"text-success"%>

         </div>
</div>
 </div>

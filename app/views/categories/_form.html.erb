<div class="container">
  <%= render 'shared/errors', obj:@category%>
   <div class="row justify-content-center">
     <div class="col-10">
      <%= form_with(model:@category ,class:"shadow mt-5 p-3 bg-info rounded", local: true, data: { turbo: false })  do |f| %>

         <div class="form-group row">
             <%= f.label :name,"Category name" , class:"col-2 col-form-label text-light"%><br/>
             <div class="col-10">
               <%= f.text_field :name, class:"form-control shadow rounded",placeholder:"Enter name"%>
            </div>
         </div>
         <div class="form-group row mt-4 justify-content-center">
         <div class="col-2">
           <%= f.submit ( @category.new_record? ? "Add Category":"Update Category"), class:"btn btn-outline-light btn-lg"%>
           </div>
         </div>
     <% end %>
   </div>
</div>
 </div>

<% if obj.errors.any? %>
  <div class= "container">
    <div class="row justify-content-center">
      <div class="col-10">
         <div class="alert alert-danger rounded alert-dismissible fade show" role="alert">
             <h4 class="alert-heading">Following errors prevented the <%=obj.class.name.downcase%> from saving</h4>
             <ul>
                <% obj.errors.full_messages.each do |m| %>
                <li> <%= m %></li>
                 <% end %>
              </ul>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
     </div>
   </div>
</div>
   
   <% end %>

<div class="container">
  <%= render 'shared/errors', obj:@user%>
   <div class="row justify-content-center">
     <div class="col-10">
      <%= form_with(model:@user ,class:"shadow mt-5 p-3 bg-info rounded", local: true, data: { turbo: false })  do |f| %>

         <div class="form-group row">
             <%= f.label :username , class:"col-2 col-form-label text-light"%><br/>
             <div class="col-10">
               <%= f.text_field :username, class:"form-control shadow rounded",placeholder:"Enter Your Username"%>
            </div>
         </div>

         <div class="form-group row mt-2">
            <%= f.label :email , class:"col-2  col-form-label text-light"%><br/>
            <div class="col-10">
               <%= f.email_field :email, class:"form-control shadow rounded", placeholder:"Enter your email" %>
            </div>
         </div>

         <div class="form-group row mt-2">
            <%= f.label :password , class:"col-2  col-form-label text-light"%><br/>
            <div class="col-10">
               <%= f.password_field :password, class:"form-control shadow rounded", placeholder:"Enter new Password" %>
            </div>
         </div>

         <div class="form-group row mt-4 justify-content-center">
         <div class="col-2">
           <%= f.submit "Sign up", class:"btn btn-outline-light btn-lg" %>
           </div>
         </div>
     <% end %>
   </div>
      <div class="row mt-5 text-center">
    <%= link_to '[Back to List of Articles]',articles_path , class:"text-success"%>

         </div>
</div>
 </div>
